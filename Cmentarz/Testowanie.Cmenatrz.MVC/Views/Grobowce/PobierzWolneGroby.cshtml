@using Cmentarz.DAL.Models
@model IEnumerable<Grobowiec>

@{
    ViewData["Title"] = "Wolne Groby";
}

<h2>Wolne Groby</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>ID Grobu</th>
                <th>ID Właściciela</th>
                <th>Lokalizacja</th>
                <th>Cena</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var grob in Model)
            {
                <tr>
                    <td>@grob.IdGrobowiec</td>
                    <td>@grob.IdWlasciciel</td>
                    <td>@grob.Lokalizacja</td>
                    <td>@grob.Cena</td>
                </tr>
            }
        </tbody>
    </table>
}
