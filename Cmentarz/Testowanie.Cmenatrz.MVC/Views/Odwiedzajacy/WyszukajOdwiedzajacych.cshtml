@using Cmentarz.DAL.Models
@{
    ViewData["Title"] = "Wyszukaj Odwiedzających";
}

<h2>Wyszukaj Odwiedzających</h2>

<form method="post">
    <div class="form-group">
        <label for="idOdwiedzajacy">ID Odwiedzającego:</label>
        <input type="text" class="form-control" id="idOdwiedzajacy" name="idOdwiedzajacy">
    </div>
    <div class="form-group">
        <label for="imie">Imię:</label>
        <input type="text" class="form-control" id="imie" name="imie">
    </div>
    <div class="form-group">
        <label for="nazwisko">Nazwisko:</label>
        <input type="text" class="form-control" id="nazwisko" name="nazwisko">
    </div>
    <button type="submit" class="btn btn-primary">Szukaj</button>
</form>

@if (TempData["message"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["message"]
    </div>
}

@if (Model != null)
{
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Imię</th>
                <th>Nazwisko</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var odwiedzajacy in Model)
            {
                <tr>
                    <td>@odwiedzajacy.IdOdwiedzajacy</td>
                    <td>@odwiedzajacy.Imie</td>
                    <td>@odwiedzajacy.Nazwisko</td>
                </tr>
            }
        </tbody>
    </table>
}
